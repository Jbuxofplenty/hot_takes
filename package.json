{
    "name": "hot_takes",
    "main": "expo-router/entry",
    "version": "1.0.0",
    "scripts": {
        "start": "cross-env REACT_EDITOR=code expo start",
        "android": "cross-env REACT_EDITOR=code expo start --android",
        "ios": "cross-env REACT_EDITOR=code expo start --ios",
        "ios:dev": "npx expo run:ios",
        "ios:device": "npx expo run:ios --device",
        "prebuild:ios": "npx expo prebuild --platform ios --clean",
        "prebuild:android": "npx expo prebuild --platform android --clean",
        "prebuild:all": "npx expo prebuild --clean",
        "build:staging:ios": "bundle exec fastlane ios beta",
        "build:staging:android": "bundle exec fastlane android beta",
        "build:production:ios": "bundle exec fastlane ios release",
        "build:production:android": "bundle exec fastlane android release",
        "build:ios": "bundle exec fastlane ios build",
        "build:android": "bundle exec fastlane android build",
        "eject": "expo eject",
        "emulators": "firebase emulators:start",
        "emulators:ui": "open http://localhost:4000",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:src": "eslint src/",
        "lint:src:fix": "eslint src/ --fix",
        "test": "node ./node_modules/jest/bin/jest.js --watchAll",
        "test:ci": "node ./node_modules/jest/bin/jest.js --watchAll=false --ci --passWithNoTests",
        "web": "npx http-server public -p 8080 -o",
        "prepare": "husky"
    },
    "dependencies": {
        "@expo/vector-icons": "^15.0.3",
        "@react-native-async-storage/async-storage": "^2.1.0",
        "@react-native-google-signin/google-signin": "^16.0.0",
        "@react-navigation/bottom-tabs": "^7.4.0",
        "@react-navigation/elements": "^2.6.3",
        "@react-navigation/native": "^7.1.8",
        "expo": "~54.0.25",
        "expo-apple-authentication": "~8.0.7",
        "expo-constants": "~18.0.10",
        "expo-font": "~14.0.9",
        "expo-haptics": "~15.0.7",
        "expo-image": "~3.0.10",
        "expo-linking": "~8.0.9",
        "expo-notifications": "~0.32.13",
        "expo-router": "~6.0.15",
        "expo-splash-screen": "~31.0.11",
        "expo-status-bar": "~3.0.8",
        "expo-symbols": "~1.0.7",
        "expo-system-ui": "~6.0.8",
        "expo-tracking-transparency": "~6.0.7",
        "expo-web-browser": "~15.0.9",
        "firebase": "^11.2.0",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-native": "0.81.5",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-google-mobile-ads": "^16.0.0",
        "react-native-reanimated": "~4.1.1",
        "react-native-safe-area-context": "~5.6.0",
        "react-native-screens": "~4.16.0",
        "react-native-size-matters": "^0.4.2",
        "react-native-web": "~0.21.0",
        "react-native-worklets": "0.5.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@testing-library/jest-native": "^5.4.3",
        "@testing-library/react-native": "^13.3.3",
        "@types/jest": "29.5.14",
        "@types/react": "~19.1.0",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "eslint": "^9.25.0",
        "eslint-config-expo": "~10.0.0",
        "http-server": "^14.1.1",
        "husky": "^9.1.7",
        "jest": "~29.7.0",
        "jest-expo": "^54.0.13",
        "lint-staged": "^16.2.6",
        "typescript": "~5.9.2"
    },
    "private": true
}
